<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey"
    tools:context=".ArtistPackage.artistFragments.StartCampaignFragment">

    <!--TootbarLayout-->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.LoudCloud">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="LoudCloud Campaign"
            style="@style/menuItemFont"
            app:titleTextColor="@color/white"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.LoudCloud" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <TextView
        android:id="@+id/listText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PERFORMANCE ONE"
        android:fontFamily="@font/nexabold"
        android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/listOfSongs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listText"
        android:hint="PERFORMANCE ONE!"
        android:textColor="#ffffff"
        android:inputType="text"
        android:textColorHint="#979595" />

    <TextView
        android:id="@+id/alternativeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listOfSongs"
        android:text="PERFORMANCE TWO"
        android:textColor="#ffffff"
        android:fontFamily="@font/nexabold"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/alternativeSongs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alternativeText"
        android:inputType="text"
        android:textColor="#ffffff"
        android:textColorHint="#979595"
        android:hint="PERFORMANCE TWO(OPTIONAL)" />

    <TextView
        android:id="@+id/locationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alternativeSongs"
        android:text="LOCATION ONE"
        android:textColor="#ffffff"
        android:fontFamily="@font/nexabold"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationText"
        android:inputType="text"
        android:textColor="#ffffff"
        android:textColorHint="#979595"
        android:hint="LOCATION ONE" />

            <TextView
                android:id="@+id/alternativelocationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location"
                android:text="LOCATION TWO"
                android:textColor="#ffffff"
                android:fontFamily="@font/nexabold"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/alternativelocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/alternativelocationText"
                android:inputType="text"
                android:textColor="#ffffff"
                android:textColorHint="#979595"
                android:hint="LOCATION TWO (OPTIONAL)" />



    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alternativelocation"
        android:text="STREAM TIME AND VOTES NEEDED!"
        android:textColor="#ffffff"
        android:fontFamily="@font/nexabold"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeText">
        <RadioButton
            android:id="@+id/oneHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:fontFamily="@font/nexabold"
            android:text="1 HOUR (100 VOTES MINIMUM)"></RadioButton>

        <RadioButton
            android:id="@+id/twoHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:fontFamily="@font/nexabold"
            android:text="2 HOURS (500 VOTES MINIMUM)"></RadioButton>

        <RadioButton
            android:id="@+id/threeHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:fontFamily="@font/nexabold"
            android:text="3 HOURS (1500 VOTES MINIMUM)"></RadioButton>

        <RadioButton
            android:id="@+id/unlimitedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:fontFamily="@font/nexabold"
            android:text="UNLIMITED HOURS PERFORMANCE NEEDED MINIMUM 5000 VOTES"></RadioButton>

        <RadioButton
            android:id="@+id/custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:fontFamily="@font/nexabold"
            android:text="CUSTOM"></RadioButton>


    </RadioGroup>

            <TextView
                android:id="@+id/customVotesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radioGroup"
                android:text="CUSTOM VOTES"
                android:textColor="#ffffff"
                android:fontFamily="@font/nexabold"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/customVotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/customVotesText"
                android:inputType="number"
                android:textColor="#ffffff"
                android:textColorHint="#979595"
                android:hint="CUSTOM VOTES" />

            <TextView
                android:id="@+id/customStreamTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/customVotes"
                android:text="CUSTOM PERFORMANCE TIME"
                android:textColor="#ffffff"
                android:fontFamily="@font/nexabold"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="20sp"/>


                <EditText
                    android:id="@+id/customStreamTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="time"
                    android:textColor="#ffffff"
                    android:layout_below="@+id/customStreamTimeText"
                    android:textColorHint="#979595"
                    android:hint="HOURS (00)" />



        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customStreamTime"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/nexabold"
            android:background="@drawable/rounded_buttons"
            android:text="Start Campaign"
            android:layout_marginBottom="10dp"/>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>